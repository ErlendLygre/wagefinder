<div class="form-wrapper">
  <div class="navbar">
    <%= render 'shared/logo' %>
  </div>
    <h3> Help us refine</br> your results </h3>
  <div class="form-minus-button">
  <%= simple_form_for @wage do |f| %>
    <%= f.error_notification %>
    <%= f.input :wage, label: false, placeholder: "Salary" %>
    <%= f.input :company, label: false, placeholder: "Company" %>
    <%= f.input :years_worked, label: false, placeholder: "Years worked" %>
    <%= f.input :field_id, collection: @fields, label: false, selected: "Pick a field" %>
  </div>
    <%= f.button :submit %>
  <% end %>
</div>
