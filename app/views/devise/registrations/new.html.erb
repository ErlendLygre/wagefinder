
<div class="form-wrapper">
  <%= render "shared/logo" %>
  <h3>Step 1 of 2:<br> A quick signup</h3>
  <div class="form-minus-button">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, required: true, label: false, placeholder: "Email", autofocus: true %>
        <%= f.input :password, required: true, label: false, placeholder: "Password" %>
        <%= f.input :password_confirmation, label: false, placeholder: "Confirm password", required: true %>
      </div>

    <%= render "devise/shared/links" %>
  </div>
    <div class="form-actions">
      <%= f.button :submit, "Next step" %>
    </div>
  <% end %>

</div>
